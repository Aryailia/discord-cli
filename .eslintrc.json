{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "no-fallthrough": "off",
    "indent": ["error", 2, { "SwitchCase": 1, "VariableDeclarator": 2 }],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-console": 0
  }
}